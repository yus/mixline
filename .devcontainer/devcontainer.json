{
  "name": "Mixline Audio App",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  
  "postCreateCommand": "pip install -r requirements.txt",
  
  "postStartCommand": "nohup python app.py > flask.log 2>&1 &",
  
  "forwardPorts": [5000],
  
  "portsAttributes": {
    "5000": {
      "label": "Mixline App",
      "onAutoForward": "openBrowser",
      "visibility": "public",
      "requireLocalPort": false
    }
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
} 
